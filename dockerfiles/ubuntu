FROM ubuntu:16.04

ADD . /google_chrome

WORKDIR /google_chrome

RUN apt-get update && \
    apt-get install curl git lsb-release -y  && \
    curl https://apt.puppetlabs.com/puppetlabs-release-pc1-xenial.deb > /tmp/puppet.deb  && \
    dpkg -i /tmp/puppet.deb  && \
    apt-get update  && \
    apt-get install puppet-agent  && \
    /opt/puppetlabs/bin/puppet module build && \
    /opt/puppetlabs/bin/puppet module install pkg/jamesnetherton-google_chrome-$(ls pkg/jamesnetherton-google_chrome-*.tar.gz | sed 's/.*\([0-9].[0-9].[0-9]\).*/\1/p' | head -n1).tar.gz && \
    /opt/puppetlabs/bin/puppet apply --parser future --verbose --debug /google_chrome/integration-tests/chrome.pp

CMD [ "ls", "-l", "/usr/bin/google-chrome" ]
